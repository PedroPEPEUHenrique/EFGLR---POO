    print('Invalido')

else:
    print('Valido')

#11

idadecat = int(input('Digite a idade: '))

if(idadecat < 12):
    print('Criança')

elif(idadecat >= 13 and idadecat <= 17):
    print('Adolescente')

elif(idadecat > 18):
    print('Adulto')

#12

a=int(input("Primeiro numero: "))
b=int(input("Segundo numero: "))
c=int(input("Terceiro numero: "))

if(a > b and a > c):
    print(a)
    print("A é o maior número")

if(b > a and b > c):
    print(b)
    print("B é o maior número")

if(c > a and c > b):
    print(c)
    print("C é o maior número")

#13

primeiro = int(input('Digite o primeiro numero: '))
segundo = int(input('Digite o segundo numero: '))

if(segundo == 0):
    print('Divisão impossivel')

else:
    div = primeiro/segundo
    print(div)

#14
numero = int(input('Digite um numero: '))

if(numero > 10 and numero < 50):
    print('Dentro do intervalo')

else:
    print('Fora do intervalo')

#15

media = float(input('Informe a media: '))

if(media >= 7):
    print('Aprovado')

if(media < 5):
    print('Reprovado')

elif(media >= 5 and media < 7):
    print('Recuperação')

#16

peso = int(input())
altura = int(input())

imc = peso/altura

if(imc < 18.5):
    print('Abaixo do peso')
if(imc >= 18.5 and imc < 25):
    print('Peso normal')
elif(imc > 25):
    print('Acima do peso')

#17

lado1 = float(input('Informe o lado: '))
lado2 = float(input('Informe o lado: '))
lado3 = float(input('Informe o lado: '))

if (lado1 == lado2 == lado3):
    print("Equilátero")
elif (lado1 == lado2 or lado1 == lado3 or lado2 == lado3):
    print("Isósceles")
else:
    print("Escaleno")

#18

