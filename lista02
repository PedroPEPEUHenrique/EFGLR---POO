elif(n1%2 == 1):
    print('Impar')

#4

nm1 = int(input('Insira um numero: '))
nm2 = int(input('Insira um numero: '))

if(nm1 > nm2):
    print('Este é o maior número:',nm1)

if(nm2 > nm1):
    print('Este é o maior: ',nm2)

#5

valor = float(input('Informe o valor'))

if(valor > 100.00):
    valordesc= valor - (valor * 0.1)
    print(f'o valor é:{valordesc:.2f}')

else: 
    print(f'O valor é:{valor:.2f}')

#6

vmult = int(input("Insira o numero"))

if(vmult%5==0):
    print('O numéro é muliplo de 5')

else:
    print('Ele não é multiplo')

#7

med1 = float(input('Insira a nota: '))
med2 = float(input('Insira a nota: '))
med3 = float(input('Insira a nota: '))    

med = (med1+med2+med3)/3

if(med >= 7.00):
    print('Aprovado')

else:
    print('Reprovado')

