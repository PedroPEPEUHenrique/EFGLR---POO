if(login == 'admin' and senh4 == 1234):
    print('Login bem-sucedido')

else:
    print('Não permitido')

#19

id = int(input())

if (id >= 18):
    print('Pode dirigir')

elif(id < 18):
    print('não pode dirigir')
    id = 18 - id
    print(id)

    
