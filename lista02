#1

n1 = int(input('Digite um numero: '))

if(n1 > 0):
    print('Positivo')

if(n1 == 0):
    print('Zero')

elif(n1 <= -1):
    print('Negativo')

#2

idade = int(input())

if (idade >= 18):
    print('Maior idade')

else:
    print('Menor idade')


